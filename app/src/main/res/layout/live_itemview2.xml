<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/itemview_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/itemview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#唱见舞见#暴走百货直播舞台"
            android:layout_below="@+id/itemview_img"
            android:minEms="12"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemview_title"
            android:text="养鸟少女"
            android:id="@+id/itemview_name"
            android:textSize="10sp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000"
            android:textSize="10sp"
            android:id="@+id/itemview_count"
            android:layout_alignParentRight="true"
            android:layout_below="@id/itemview_title"/>

    </RelativeLayout>





</android.support.v7.widget.CardView>